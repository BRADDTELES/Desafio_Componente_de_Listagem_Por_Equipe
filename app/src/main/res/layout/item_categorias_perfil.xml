<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingTop="16dp"
    android:paddingEnd="8dp">

    <ImageView
        android:id="@+id/imgIconeCategoria"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_conversas"
        app:tint="?attr/colorOnSurface" />

    <TextView
        android:id="@+id/tvNomeCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/lato_bold"
        android:text="Conversas"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imgIconeCategoria"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDescricaoCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/lato_regular"
        android:text="Meu histórico de conversas"
        android:textColor="@color/cinza"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/imgIconeCategoria"
        app:layout_constraintTop_toBottomOf="@+id/tvNomeCategoria" />

    <ImageButton
        android:id="@+id/imgNavegar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="Botão de Navegação"
        app:layout_constraintBottom_toBottomOf="@+id/tvDescricaoCategoria"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvNomeCategoria"
        app:srcCompat="@drawable/ic_seta_direita"
        app:tint="?attr/colorOnSurface"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgNavegar"
        app:layout_constraintEnd_toStartOf="@+id/imgNavegar"
        app:layout_constraintTop_toTopOf="@+id/imgNavegar"
        app:srcCompat="@drawable/ic_circulo_vermelho" />

    <TextView
        android:id="@+id/tvNotificationCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:text="6"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/cinza_claro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescricaoCategoria" />
</androidx.constraintlayout.widget.ConstraintLayout>