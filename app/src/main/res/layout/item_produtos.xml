<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Container vertical para os textos -->
    <LinearLayout
        android:id="@+id/linearTextos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgProdutoItem"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtProdutoNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome Produto"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="0dp"/>

        <TextView
            android:id="@+id/txtProdutoDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="descricao_produto"
            android:layout_marginEnd="2dp"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/txtProdutoPreco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R$ 99,90"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>
    </LinearLayout>

    <!-- Logo do restaurante -->
    <ImageView
        android:id="@+id/imgProdutoItem"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_restaurant_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
